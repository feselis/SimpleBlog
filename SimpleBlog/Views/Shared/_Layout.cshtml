@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - SimpleBlog</title>
</head>
<body>
    <header>

        <h1><a href="@Url.RouteUrl("home")">Simple Blog</a></h1 Blog>

        @if (User.Identity.IsAuthenticated)
        {
            <!-- Neste ponto avaliar como a propriedade User obtem os valores provenientes do formulário -->

            <p>Bem-vindo de volta, @User.Identity.Name</p> 
            <a href="@Url.RouteUrl("logout")">Logout</a>

            if (User.IsInRole("admin"))
            {
                <!--Neste ponto avaliar como objeto "area" que é um tipo anônimo é obtido através da linguagem -->
                <a href="@Url.Action("Index", "Posts", new { area = "admin"} )"> Veja os posts como administrador</a>
            }
        }
        else
        {
            <a href="@Url.RouteUrl("login")"></a>
        }

    </header>

    @RenderBody()

    @RenderSection("Scripts", false)

</body>
</html>
